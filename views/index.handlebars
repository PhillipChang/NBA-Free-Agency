<div class="row" id="add-player">
<h4 class="form-head">Add New Player</h4>
  <form action="#" class="create-form">
    <div class="col s3">
    <label for="player"><h6>Player Name:</h6></label>
    <input class="player-input" type="text" id="play" name="name">
    </div><br><br><br><br>
    <p>
      <label>
        <input name="traded" type="radio" value="0" checked />
        <span>Roster</span>
      </label>
      &NonBreakingSpace;
      <label>
        <input name="traded" type="radio" value ="1" />
        <span>Agent</span>
      </label>
    <br><br>
    </p>
      <button class="waves-effect waves-light btn-small red accent-4" type="submit"><i class="fas fa-basketball-ball">&nbsp Add Player</i></button>

      {{!-- <a class="waves-effect waves-light btn-small"><i class="material-icons left">cloud</i>button</a> --}}

  </form>
</div>