<h1 id="logo"><span class="fas fa-basketball-ball"></span>&nbsp NBA Free Agency</h1>

<div class="row col-md-12" id="labels">
  <div id="roster">
  <span id="gsw-header">Your Roster</span> 
  <ul id="roster-list">
  {{#each players}}
    {{#unless traded}}
      {{> players/players-block traded=true}}
    {{/unless}}
  {{/each}}
</ul>
  </div>
  <div id="agents">
 <span id="agent-header">NBA Free Agents</span> 
 <ul id="agent-list">
  {{#each players}}
    {{#if traded}}
      {{> players/players-block traded=false}}
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>

